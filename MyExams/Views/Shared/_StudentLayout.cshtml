<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Untitled Document</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Styles.Render("~/Content/dashboard")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }
</head>
<body class="app header-fixed aside-menu-hidden">
    <header class="app-header navbar">
        
        <a class="navbar-brand" href="@Url.Action("Index", "Student")">MY EXAMS</a>
        <ul class="nav navbar-nav ml-auto">

            <li class="nav-item">
                <a class="nav-link nav-dropdown-toggle nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">

                    <span class="d-md-down-none">@(ViewData["FullName"])</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <div class="dropdown-header text-center">
                        <strong>Account</strong>
                    </div>
                    <a class="dropdown-item" href="#"><i class="fa fa-wrench"></i>Настройки</a>

                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item"><i class="zmdi zmdi-time-restore"></i> Излез</a>
                    }

                </div>
            </li>
        </ul>

    </header>

    <div class="app-body">
       
        <!-- Main content -->
        <main class="main">

            @RenderBody()
        </main>
    </div>
</body>




@Scripts.Render("~/bundles/jquery.unobtrusive-ajax")
@Scripts.Render("~/bundles/bootstrap")


@RenderSection("scripts", required: false)

<script>
    $(".nav-dropdown-toggle").click(function () {
        if ($(this).next().hasClass("show")) {
            $(this).next().removeClass("show");
        } else {
            $(this).next().addClass("show");
        }
    })
</script>
</html>


